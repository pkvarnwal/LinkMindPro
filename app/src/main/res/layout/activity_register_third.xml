<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_450sdp">

            <RelativeLayout
                android:id="@+id/relative_layout_sign_in"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/text_view_already_account"
                    style="@style/textSize_smaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/text_view_sign_in"
                    android:layout_toStartOf="@+id/text_view_sign_in"
                    android:text="@string/already_have_account"
                    android:textColor="@color/eqdepot_font_gray" />

                <TextView
                    android:id="@+id/text_view_sign_in"
                    style="@style/textSize_smaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/sign_in"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/relative_layout_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_layout_sign_in"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:minHeight="@dimen/_120sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relative_layout_optional"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/text_view_personal_information"
                        style="@style/textSize_smaller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Personal Information"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_optional"
                        style="@style/textSize_smaller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/text_view_personal_information"
                        android:text="(optional)"
                        android:textColor="@color/eqdepot_font_gray" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/edit_text_phone"
                    style="@style/textSize_small"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/text_view_email_label"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_button_blue_border"
                    android:gravity="start"
                    android:hint="Phone"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    tools:ignore="TextFields" />

                <EditText
                    android:id="@+id/edit_text_address"
                    style="@style/textSize_small"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/text_view_email_label"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_button_blue_border"
                    android:gravity="start"
                    android:hint="Address"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    tools:ignore="TextFields" />


                <EditText
                    android:id="@+id/edit_text_city"
                    style="@style/textSize_small"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/text_view_email_label"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_button_blue_border"
                    android:gravity="start"
                    android:hint="City"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    tools:ignore="TextFields" />

                <EditText
                    android:id="@+id/edit_text_state"
                    style="@style/textSize_small"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/text_view_email_label"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_button_blue_border"
                    android:gravity="start"
                    android:hint="State"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    tools:ignore="TextFields" />

                <EditText
                    android:id="@+id/edit_text_zip"
                    style="@style/textSize_small"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/text_view_email_label"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_button_blue_border"
                    android:gravity="start"
                    android:hint="Zip"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    tools:ignore="TextFields" />

                <EditText
                    android:id="@+id/edit_text_date_of_birth"
                    style="@style/textSize_small"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/text_view_email_label"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_button_blue_border"
                    android:gravity="start"
                    android:hint="Date of birth (mm/dd/yyyy)"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    tools:ignore="TextFields" />


            </LinearLayout>

            <View
                android:id="@+id/space_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_below="@+id/relative_layout_mail" />

            <Button
                android:id="@+id/button_continue"
                style="@style/textSize_medium"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/space_view"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/continue_"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_view_skip"
                style="@style/textSize_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_continue"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="Skip"
                android:textColor="@color/eqdepot_font_gray" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>