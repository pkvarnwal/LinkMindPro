<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_four"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginTop="@dimen/_80sdp"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_view_pager_four" />

    <TextView
        android:id="@+id/text_view_fragment_two_emergency_paging"
        style="@style/textSize_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_view_fragment_two_patient"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_25sdp"
        android:text="@string/delivery_confirmation"
        android:textColor="@color/eqdepot_blue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_fragment_two_patient"
        style="@style/textSize_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_40sdp"
        android:gravity="center"
        android:text="@string/know_instantly" />
</RelativeLayout>