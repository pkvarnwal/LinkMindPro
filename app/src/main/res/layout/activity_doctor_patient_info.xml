<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_500sdp"
            android:background="@color/eqdepot_background_color"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="@dimen/_65sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_doctor_patient"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:src="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/text_view_doctor_patient_name"
                    style="@style/textSize_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_toEndOf="@+id/image_view_doctor_patient"
                    android:layout_toRightOf="@+id/image_view_doctor_patient"
                    android:text="Will Rosenbloom"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_view_doctor_patient_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_doctor_patient_name"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_toEndOf="@+id/image_view_doctor_patient"
                    android:layout_toRightOf="@+id/image_view_doctor_patient"
                    android:text="310-555-4789"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_view_doctor_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_doctor_patient_number"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_toEndOf="@+id/image_view_doctor_patient"
                    android:layout_toRightOf="@+id/image_view_doctor_patient"
                    android:text="9/28/1973 (43)"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/image_view_doctor_patient_phone"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_blue_phone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_view_doctor_patient_email_label"
                    style="@style/textSize_smaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="Email"
                    android:textColor="@color/black" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/linear_layout_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_view_doctor_patient_email"
                    style="@style/textSize_smaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_alignParentLeft="true"
                    android:text="will.rosenbloom@gmail.com"
                    android:textColor="@color/black" />


                <ImageView
                    android:id="@+id/image_view_doctor_patient_email"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_blue_phone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_view_doctor_patient_address_label"
                    style="@style/textSize_smaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="Address"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_view_doctor_patient_address"
                    style="@style/textSize_smaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="1732 Palm Blvd, Encino, CA91316"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_view_doctor_patient_pharmacy_label"
                    style="@style/textSize_smaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="Pharmacy"
                    android:textColor="@color/black" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/linear_layout_pharmacy_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_view_pharmacy"
                    style="@style/textSize_smaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_alignParentLeft="true"
                    android:text="CVS Pharmacy"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_view_pharmacy_address"
                    style="@style/textSize_smallest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/text_view_pharmacy"
                    android:text="17320 Ventura Blvd, Encino, CA 91316"
                    android:textColor="@color/eqdepot_font_gray" />

                <TextView
                    android:id="@+id/text_view_pharmacy_store"
                    style="@style/textSize_smallest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/text_view_pharmacy_address"
                    android:text="Store: 21179"
                    android:textColor="@color/eqdepot_font_gray" />

                <TextView
                    android:id="@+id/text_view_pharmacy_phone"
                    style="@style/textSize_smallest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/text_view_pharmacy_store"
                    android:text="(818) 555-8976"
                    android:textColor="@color/eqdepot_font_gray" />

                <ImageView
                    android:id="@+id/image_view_pharmacy_phone"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_blue_phone"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_view_doctor_patient_insurance_label"
                    style="@style/textSize_smaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="Insurance"
                    android:textColor="@color/black" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/linear_layout_insurance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_view_insurance"
                    style="@style/textSize_smaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_alignParentLeft="true"
                    android:text="Blue Sheild of California"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_view_insurance_address"
                    style="@style/textSize_smallest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/text_view_insurance"
                    android:text="17320 Ventura Blvd, Encino, CA 91316"
                    android:textColor="@color/eqdepot_font_gray" />

                <TextView
                    android:id="@+id/text_view_pharmacy_store"
                    style="@style/textSize_smallest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/text_view_pharmacy_address"
                    android:text="Store: 21179"
                    android:textColor="@color/eqdepot_font_gray" />

                <TextView
                    android:id="@+id/text_view_pharmacy_phone"
                    style="@style/textSize_smallest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/text_view_pharmacy_store"
                    android:text="(818) 555-8976"
                    android:textColor="@color/eqdepot_font_gray" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>