<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_layout_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@color/red"
        android:paddingBottom="@dimen/_3sdp"
        android:paddingTop="@dimen/_3sdp">

        <ImageView
            android:id="@+id/image_view_fragment_two_error"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:contentDescription="@null"
            android:src="@drawable/ic_email" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toEndOf="@+id/image_view_fragment_two_error"
            android:layout_toRightOf="@+id/image_view_fragment_two_error"
            android:text="@string/you_have_a_clinical"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toEndOf="@+id/image_view_fragment_two_error"
            android:layout_toRightOf="@+id/image_view_fragment_two_error"
            android:text="@string/you_have_a_clinical"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/image_view_fragment_two_close"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:contentDescription="@null"
            android:src="@drawable/ic_email" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/relative_layout_info"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view_fragment_two_circular"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/text_view_urgent"
            style="@style/textSize_smaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/image_view_fragment_two_circular"
            android:layout_toRightOf="@+id/image_view_fragment_two_circular"
            android:background="@color/red"
            android:padding="@dimen/_2sdp"
            android:text="@string/urgent"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_view_fragment_two_name"
            style="@style/textSize_smaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_urgent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/image_view_fragment_two_circular"
            android:layout_toRightOf="@+id/image_view_fragment_two_circular"
            android:text="Mark Davito"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_fragment_two_name"
            android:layout_toEndOf="@+id/image_view_fragment_two_circular"
            android:layout_toRightOf="@+id/image_view_fragment_two_circular"
            android:text="@string/i_am_having"
            android:textColor="@color/eqdepot_font_gray" />

        <TextView
            android:id="@+id/text_view_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_circle_red"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_view_fragment_two_emergency_paging"
        style="@style/textSize_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_view_fragment_two_patient"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_25sdp"
        android:text="@string/emergency_paging"
        android:textColor="@color/eqdepot_blue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_fragment_two_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_40sdp"
        android:gravity="center"
        android:text="@string/patient_can_apply" />
</RelativeLayout>