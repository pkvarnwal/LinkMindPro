<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="showNotificationBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/eqdepot_blue</item>
    </style>

    //10px

    <style name="textSize_smallest" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    //12px

    <style name="textSize_smaller" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    //14px

    <style name="textSize_small" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    //16px

    <style name="textSize_medium" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    //18px

    <style name="textSize_large" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    //22px

    <style name="textSize_header" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>
</resources>
